{
  "version": 2,
  "builds": [
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install --no-optional",
        "buildCommand": "cd Client && npm install --no-optional && npm run build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/Client/dist/$1" }
  ]
}
