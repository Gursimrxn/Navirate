{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "backend/**/*.ts",
      "use": "@vercel/deno"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/$1"
    }
  ],
  "env": {
    "DENO_ENV": "production"
  },
  "regions": ["sin1"],
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "backend/**/*.ts": {
      "runtime": "deno",
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
